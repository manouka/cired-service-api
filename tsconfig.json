{
    "compileOnSave": true,
    "compilerOptions": {
        "experimentalDecorators" : true,
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "dist/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}